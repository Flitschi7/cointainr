# Cointainr Environment Configuration
# This file is for LOCAL DEVELOPMENT only
# For Docker deployment, edit docker-compose.yml directly

# =============================================================================
# FOR LOCAL DEVELOPMENT (without Docker)
# =============================================================================
# Copy this file to .env and fill in your actual values if running locally

# API KEYS (Required)
FINNHUB_API_KEY=your_finnhub_api_key_here
EXCHANGERATE_API_KEY=your_exchangerate_api_key_here

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./cointainr.db

# Cache Configuration
PRICE_CACHE_TTL_MINUTES=15
CONVERSION_CACHE_TTL_HOURS=8
PRICE_CACHE_CLEANUP_DAYS=30
CONVERSION_CACHE_CLEANUP_DAYS=7

# Application Settings
DEFAULT_CURRENCY=EUR
FORCE_REFRESH_ONLY=false

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_JSON_LOGGING=false

# Frontend Settings (for local development)
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_PRICE_CACHE_TTL_MINUTES=15
VITE_CONVERSION_CACHE_TTL_HOURS=8
VITE_DEFAULT_CURRENCY=EUR
VITE_FORCE_REFRESH_ONLY=false

# =============================================================================
# FOR DOCKER DEPLOYMENT
# =============================================================================
# Edit the environment variables directly in docker-compose.yml
# No .env file needed for Docker!